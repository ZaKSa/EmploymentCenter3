<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://suitableProfessionsBrowse.caption"
        focusComponent="suitableProfessionsesTable">
    <data readOnly="true">
        <collection id="suitableProfessionsesDc"
                    class="com.company.employmentcenter3.entity.SuitableProfessions">
        <loader id="suitableProfessionsDL"/>
        </collection>

    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="suitableProfessionsesTable" spacing="true">
        <groupTable id="suitableProfessionsesTable"
                    width="100%"
                    dataContainer="suitableProfessionsesDc">
            <actions>
                <action id="create" type="create"/>
            </actions>
            <columns>
                <column id="suitableProfessionsId"/>
                <column id="nameOfEmployer"/>
                <column id="professions"/>
                <column id="post"/>
                <column id="salary"/>
                <column id="bet"/>
                <column id="dateOfVacancyRegistration"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="suitableProfessionsesTable.create"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>